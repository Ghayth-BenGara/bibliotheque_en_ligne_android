<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".HomeActivity"
    android:id="@+id/drawer_layout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/linear_layout">

        <include layout="@layout/navigation_bar"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"/>
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true">
        
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">
            
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@color/colorGris">
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="230dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/bibliotheque">
                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/favicon"
                        android:layout_gravity="center"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bibliothèque en ligne"
                        android:textAllCaps="true"
                        android:textColor="@color/colorWhite"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:layout_marginTop="15dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="215dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="135dp"
                        android:orientation="horizontal"
                        android:layout_marginBottom="10dp">
                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:orientation="vertical"
                            android:clickable="true"
                            android:foreground="?selectableItemBackground">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:id="@+id/users"
                                    android:layout_width="90dp"
                                    android:layout_height="90dp"
                                    android:src="@drawable/users"
                                    android:layout_centerInParent="true"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:text="Gestion des comptes"
                                    android:textAllCaps="true"
                                    android:textSize="12sp"
                                    android:layout_below="@id/users"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="24dp"
                                    android:textColor="@color/colorBlue"/>
                            </RelativeLayout>


                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:orientation="vertical"
                            android:clickable="true"
                            android:foreground="?selectableItemBackground">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:id="@+id/livres"
                                    android:layout_width="90dp"
                                    android:layout_height="90dp"
                                    android:src="@drawable/livre"
                                    android:layout_centerInParent="true"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:text="Gestion des livres"
                                    android:textAllCaps="true"
                                    android:textSize="12sp"
                                    android:layout_below="@id/livres"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="24dp"
                                    android:textColor="@color/colorBlue"/>
                            </RelativeLayout>


                        </androidx.cardview.widget.CardView>

                    </LinearLayout>
                    <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="135dp"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp">
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        android:clickable="true"
                        android:foreground="?selectableItemBackground">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:id="@+id/demande"
                                android:layout_width="90dp"
                                android:layout_height="90dp"
                                android:src="@drawable/demande"
                                android:layout_centerInParent="true"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="Gestion des demandes"
                                android:textAllCaps="true"
                                android:textSize="12sp"
                                android:layout_below="@id/demande"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="24dp"
                                android:textColor="@color/colorBlue"/>
                        </RelativeLayout>


                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:orientation="vertical"
                        android:clickable="true"
                        android:foreground="?selectableItemBackground">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:id="@+id/statistique"
                                android:layout_width="90dp"
                                android:layout_height="90dp"
                                android:src="@drawable/statistique"
                                android:layout_centerInParent="true"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="Statistiques"
                                android:textAllCaps="true"
                                android:textSize="12sp"
                                android:layout_below="@id/statistique"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="24dp"
                                android:textColor="@color/colorBlue"/>
                        </RelativeLayout>


                    </androidx.cardview.widget.CardView>

                </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="135dp"
                        android:orientation="horizontal"
                        android:layout_marginBottom="10dp">
                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:orientation="vertical"
                            android:clickable="true"
                            android:foreground="?selectableItemBackground">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:id="@+id/historique"
                                    android:layout_width="90dp"
                                    android:layout_height="90dp"
                                    android:src="@drawable/historique"
                                    android:layout_centerInParent="true"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:text="Historiques"
                                    android:textAllCaps="true"
                                    android:textSize="12sp"
                                    android:layout_below="@id/historique"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="24dp"
                                    android:textColor="@color/colorBlue"/>
                            </RelativeLayout>


                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:orientation="vertical"
                            android:clickable="true"
                            android:foreground="?selectableItemBackground">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:id="@+id/sesame"
                                    android:layout_width="90dp"
                                    android:layout_height="90dp"
                                    android:src="@drawable/sesame"
                                    android:layout_centerInParent="true"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:text="Sesame"
                                    android:textAllCaps="true"
                                    android:textSize="12sp"
                                    android:layout_below="@id/sesame"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="24dp"
                                    android:textColor="@color/colorBlue"/>
                            </RelativeLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/colorBlue"
                android:text="© Copyright 2020"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:textAllCaps="false" />

        </LinearLayout>

    </ScrollView>

    </LinearLayout>
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:itemTextColor="@color/colorBlue"
        app:itemIconTint="@color/colorWhite"
        app:menu="@menu/menu"
        android:layout_gravity="start"
        app:headerLayout="@menu/navigation_header"
        android:background="@color/colorWhite">
    </com.google.android.material.navigation.NavigationView>
</androidx.drawerlayout.widget.DrawerLayout>