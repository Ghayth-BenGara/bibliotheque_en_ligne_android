<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:background="@drawable/bg_bibliotheque"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_marginBottom="1dp"
    android:layout_marginTop="1dp"
    android:layout_marginLeft="1dp"
    android:layout_marginRight="1dp">

        <ImageView
            android:id="@+id/image_header"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:paddingTop="10dp"
            android:src="@drawable/favicon"
            android:gravity="center"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/nom_bibliotheque"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/image_header"
            android:paddingTop="10dp"
            android:text="Bibliothèque en ligne"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:textStyle="italic|bold"
            android:textAlignment="center"
            android:fontFamily="monospace"
            android:textAllCaps="true"
            android:gravity="center"
            android:textColor="@color/colorWhite"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/nom_universite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/nom_bibliotheque"
            android:paddingTop="15dp"
            android:text="Université Sesame"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:textStyle="italic"
            android:textAlignment="center"
            android:fontFamily="cursive"
            android:textAllCaps="false"
            android:gravity="center"
            android:textColor="@color/colorWhite"
            android:textSize="20sp" />
</RelativeLayout>